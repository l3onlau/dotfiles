# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        output_format = "i3bar"
        colors = true
        color_good = "#50FA7B"
        color_degraded = "#F1FA8C"
        color_bad = "#FF5555"
        interval = 1
}

order += "ethernet desktop0"
order += "ethernet desktop1"
order += "ethernet desktop2"
order += "ipv6"
order += "wireless _first_"
order += "disk /"
order += "volume master"
order += "load"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

disk "/" {
        format = "%avail"
}

volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse"
}

load {
        format = "%1min"
}

memory {
        format = "%used | %available"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

ethernet desktop0 {
    format_up = "desktop0: ON"
    format_down = ""
}

ethernet desktop1 {
    format_up = "desktop1: ON"
    format_down = ""
}

ethernet desktop2 {
    format_up = "desktop2: ON"
    format_down = ""
}
